<div id="page-header">
	<h1> Quotes </h1>
</div>

<%= link_to 'New Quote', new_quote_path %>


<% @quotes.each do |quote| %>
    
    <div class="quote">
    	<p> <%= quote.quote %></p>
		<strong> <%= quote.author %> </strong><br />
		<strong> <%= quote.tags %> </strong>
    </div>
    
    <div class="meta">
       <%= link_to time_ago_in_words(quote.created_at) + " ago" , quote %> |
     <span class="admin">
	     <%= link_to 'Edit', edit_quote_path(quote) %> |
	     <%= link_to 'Delete', quote, method: :delete, data: { confirm: 'Are you sure you want to delete this quote?' } %>
     </span>
    </div>
<% end %>

